{
  "manifest_version": 3,
  "name": "Quick Notes with AI",
  "version": "1.3",
  "author": "First Last",
  "description": "Quick Notes with AI-powered suggestions",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
],
  "action": {
    "default_popup": "index.html",
    "default_title": "AI-Powered Notes"
  }
}